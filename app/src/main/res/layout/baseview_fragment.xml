<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:weightSum="1">

    <Spinner
        android:id="@+id/languageIn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <Spinner
        android:id="@+id/languageOut"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/languageIn"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/textTranslate"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:textSize="19sp"
        android:ems="10"
        android:maxLines="1"
        android:inputType="textAutoCorrect"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:hint="@string/write_word"
        android:layout_below="@+id/languageIn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/translatedText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="19sp"
        android:textColor="@color/dark"
        android:scrollbars="vertical"
        android:layout_below="@+id/textTranslate"
        android:layout_alignParentStart="true"/>


</RelativeLayout>